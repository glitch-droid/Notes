<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVM.MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <style name="Theme.MVVM.AddNoteActivity" parent="Theme.MVVM.MainActivity">
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_500</item>
    </style>

    <style name="Theme.MVVM.NumberPicker" parent="Theme.AppCompat">
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>